<ol class="breadcrumb">
  <li><a href="/">Home</a> / </li>
  <li class="active"> Indicators </li>
</ol>


<%- model_class = Indicator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Condition</th>
      <th>Survey Method</th>
    </tr>
  </thead>
  <tbody>
    <% @indicators.each do |indicator| %>
      <tr>
        <td width="30%"><%= link_to indicator.name, indicator_path(indicator) %></td>
        <td><%= indicator.condition.name %></td>
        <td><%= indicator.survey_method.name %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_indicator_path,
            :class => 'btn btn-primary' %>
