          ['Rural', 45],
          ['Poorest Quintile', 32],
          ['Second Quintile', 40],
          ['Middle Quintile', 56],
          ['Fourth Quintile', 63],
          ['Richest Quintile', 66]
        ]);

        var pi4_options = {
          title: 'Disparities in care seeking for pneumonia (% children <5 taken for treatment)',
          colors: ['#e0440e', '#e6693e', '#ec8f6e', '#f3b49f', '#f6c7b6'],
          legend: { position: 'none' }
        };

        var pi4_chart = new google.visualization.ColumnChart(document.getElementById('pi4_div'));
        pi4_chart.draw(pi4_data, pi4_options);

